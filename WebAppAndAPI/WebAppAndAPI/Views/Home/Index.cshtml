@page
@model IEnumerable<WebAppAndAPI.Models.Hotels>
    
@{
}
<!DOCTYPE html>
<head>
    <title>Async Hotels</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="~/StyleSheet.css" />
</head>

<body>
    <nav class="navbar navbar-light bg-light navbar-expand-lg fixed-top">
        <a href="#" class="navbar-brand">Async Hotels</a>
        <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav ml-auto">
                <li class="navbar-item">
                    <a href="#" class="nav-link">Home</a>
                </li>
                <li class="navbar-item">
                    <a href="#" class="nav-link">Hotels</a>
                </li>
            </ul>
        </div>
    </nav>
    <h1>Welcome to Async Hotels</h1>

    @*<form method="post">
            <label asp-for="name"></label>
            <input asp-for="name" />
        </form>*@

    @foreach (var hotel in Model)
    {
        <h2>@hotel.Name</h2>
        <p>@hotel.StreetAddress</p>
        <p>@hotel.City</p>
        <p>@hotel.PhoneNumber</p>
    }

    </body>